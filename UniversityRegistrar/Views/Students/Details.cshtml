@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h2>Students Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h5>@Html.DisplayNameFor(model => model.Enrollment): @Html.DisplayFor(model => model.Enrollment)</h5>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This item does not belong to any courses</p>
}
else
{
  <h4>Courses the student belongs to:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Course.CourseName @join.Course.CourseNumber</li>
      
  }
  </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Student", "Edit", new { id = Model.StudentId })</p>
<p>@Html.ActionLink("Delete Student", "Delete", new { id = Model.StudentId })</p>
<p>@Html.ActionLink("Go back to Home", "Index", "Home")</p>